<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<h1>Tweeter</h1>
<form id="form" action="<%=_route%>" method="post" enctype="multipart/form-data">
    <% fields.forEach((item) => {
    %>
        <div class="form-group">
            <label for="exampleInputEmail1"> <%= item[0] %>
                <input type="<%= item[1] %>" class="form-control" min="1" max="99" aria-describedby="emailHelp"
                       name="<%= item[2] %>" maxlength="225" accept="image/png">
            </label>
        </div>
    <%
    })
    %>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</body>
</html>
